---
const accentColors = ['text-accent-yellow', 'text-accent-purple', 'text-accent-green', 'text-accent-pink', 'text-accent-blue', 'text-accent-orange', 'text-accent-yellow', 'text-accent-purple', 'text-accent-green'];
const brandLetters = 'SKOOL.HELP'.split('');
---

<header class="fixed top-0 left-0 right-0 z-50 border-b border-border/50 bg-background/80 backdrop-blur-xl">
  <div class="max-w-[1400px] mx-auto flex items-center justify-between px-4 h-14">
    <a href="/" class="flex items-center gap-0 text-lg font-bold tracking-tight">
      {brandLetters.map((letter, i) => (
        <span class={accentColors[i % accentColors.length]}>{letter}</span>
      ))}
    </a>
    <nav class="hidden md:flex items-center gap-6">
      <a href="/tools/ads-calculator-premium" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
        Ads Calculator
      </a>
    </nav>
  </div>
</header>
