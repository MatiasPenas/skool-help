---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
  title="404: Page Not Found | SKOOL.HELP"
  description="This page doesn't exist."
>
  <section
    class="flex flex-col items-center justify-center px-6 text-center gap-4"
    style="height: calc(100vh - 4rem);"
  >
    <img
      src="/assets/hormothin.webp"
      alt="404"
      class="w-[500px] max-w-full max-h-[40vh] object-contain"
    />

    <p class="font-mono text-3xl font-bold tracking-wide leading-none">
      <span class="text-orange-500">404:</span>
      <span class="text-white"> Path not found</span>
    </p>

    <p class="font-mono text-sm text-white/40">
      Path: <span class="text-white/60"
        >/{Astro.url.pathname.replace(/^\//, "")}</span
      >
    </p>

    <a
      href="/"
      class="font-mono text-sm text-orange-500 hover:text-orange-400 transition-colors mt-2"
    >
      â†’ Go home
    </a>
  </section>
</BaseLayout>
