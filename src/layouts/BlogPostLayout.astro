---
import BaseLayout from "@/layouts/BaseLayout.astro";

interface Props {
  title: string;
  description: string;
  date: Date;
  author: { name: string; avatar: string };
  heroImage: string;
}

const { title, description, date, author, heroImage } = Astro.props;
---

<BaseLayout title={`${title} - SKOOL.HELP`} description={description}>
  <div class="max-w-[740px] mx-auto px-4 py-12 md:py-16">
    {/* Breadcrumb */}
    <nav class="flex items-center gap-2 text-sm text-muted-foreground mb-6">
      <a href="/" class="hover:text-foreground transition-colors">Home</a>
      <span>›</span>
      <a href="/blog" class="hover:text-foreground transition-colors">Blog</a>
      <span>›</span>
      <span class="text-foreground/70 truncate">{title}</span>
    </nav>

    {/* Title */}
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mt-3 mb-4">
      {title}
    </h1>

    {/* Author */}
    <div class="flex items-center gap-3 mb-8">
      <img
        src={author.avatar}
        alt={author.name}
        class="w-8 h-8 rounded-full object-cover"
        loading="lazy"
      />
      <span class="text-sm text-muted-foreground">
        by <span class="text-foreground">{author.name}</span>
      </span>
    </div>

    {/* Hero image */}
    <img
      src={heroImage}
      alt={title}
      class="w-full aspect-video object-cover rounded-lg mb-10"
      loading="eager"
    />

    {/* Article body */}
    <div class="article-prose">
      <slot />
    </div>
  </div>
</BaseLayout>
